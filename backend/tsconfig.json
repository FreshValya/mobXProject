{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },

  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "ESNext",
    "types": ["node"],

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true
  }
}
